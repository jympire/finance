<div class="container content">
  <div class="row">
    <div class="col-md-3">
      <section id="sidebar">
        <nav>
          <center><%= image_tag avatar_url(current_user), class: "img-circle avatar-large" %></center>
          <br>
          <center class="small"><%= current_user.first_name %> <%= current_user.last_name %></center>

          <br><br>
          <a class="active"><i class="far fa-building"></i>&emsp;Companies</a>
          <a href="#"><i class="fas fa-envelope"></i>&emsp;Messages</a>
          <a href="/edit"><i class="fas fa-sliders-h"></i>&emsp;Account settings</a>
          <a href="/edit"><i class="fas fa-key"></i>&emsp;Change password</a>
          <a href="/logout" data-method="delete" rel="nofollow"><i class="fas fa-sign-out-alt"></i>&emsp;Sign out</a>
        </nav>
      </section>  
    </div>
    <div class="col-md-9">
      <h3><strong>Companies</strong></h3>
      <br>
      <div class="panel panel-default">
        <div class="media-body">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Name</th>
                <th>Amount</th>
                <th>Financing Type</th>
                <th>Funded</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @companies.each do |company| %>
                <tr>
                  <td><%= link_to company.company_name, company %></td>
                  <td><%= company.amount %></td>
                  <td><%= company.financing_type %></td>
                  <td colspan="3"></td>
                </tr>
              <% end %>
            </tbody>
          </table>  
        </div>
      </div>
    </div>
  </div>   
</div>
  


